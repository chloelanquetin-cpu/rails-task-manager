<h1>Modifier ma tâche</h1>

<%= form_with model: @task do |f| %>
  <p>
    <%= f.label :title, "Titre" %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :details, "Description" %><br>
    <%= f.text_area :details %>
  </p>

  <p>
    <%= f.check_box :completed %>
    <%= f.label :completed, "C'est fait !" %>
  </p>

  <%= f.submit "Mettre à jour" %>
<% end %>
